<?xml version="1.0"?>

<PropertyList>



    <enable3d>true</enable3d>
    
   

    <ladder>
        <name>Pitch Ladder</name>
        <type>pitch</type>
        <x>-35</x>
        <y>-20</y>
        <width>60</width>
        <height>20</height>
        <roll-input>
            <property>/orientation/roll-deg</property>
        </roll-input>
        <pitch-input>
            <property>/orientation/pitch-deg</property>
        </pitch-input>
        <compression-factor>7.8</compression-factor>
        <display-span>10.0</display-span>
        <divisions>5.0</divisions>
        <screen-hole>10</screen-hole>
        <zero-bar-overlength>30</zero-bar-overlength>
        <enable-dive-bar-angle>true</enable-dive-bar-angle>
        <enable-dynamic-origin>false</enable-dynamic-origin>
        <enable-fuselage-ref-line>true</enable-fuselage-ref-line>
        <enable-target-spot>true</enable-target-spot>
		<enable-target-markers>true</enable-target-markers>
        <enable-velocity-vector>true</enable-velocity-vector>
        <enable-drift-marker>true</enable-drift-marker>
        <enable-alpha-bracket>true</enable-alpha-bracket>
        <enable-energy-marker>true</enable-energy-marker>
        <enable-climb-dive-marker>true</enable-climb-dive-marker>
        <enable-glide-slope-marker>false</enable-glide-slope-marker>
        <glide-slope>0.0</glide-slope>
        <enable-energy-worm>true</enable-energy-worm>
        <enable-waypoint-marker>false</enable-waypoint-marker>
    </ladder>

    <tape>
        <name>Altitude-MSL</name>
        <x>37</x>
        <y>-40</y>
        <width>10</width>
        <height>50</height>
        <input>
            <property>/position/altitude-ft</property>
            <factor>0.001</factor>
            <max>100</max>
            <min>-100</min>
        </input>
        <major-divisions>1</major-divisions>
        <minor-divisions>0.1</minor-divisions>
        <display-span>2.0</display-span>
        <option>right</option>
        <option>vertical</option>
        <tick-bottom>false</tick-bottom>
        <tick-top>false</tick-top>
        <tick-right>false</tick-right>
        <tick-left>false</tick-left>
        <cap-bottom>false</cap-bottom>
        <cap-top>false</cap-top>
        <cap-right>false</cap-right>
        <cap-left>false</cap-left>
        <marker-offset>5</marker-offset>
        <enable-pointer>true</enable-pointer>
        <pointer-type>fixed</pointer-type>
    </tape>

    <tape>
        <name>KIAS</name>
        <x>-50</x>
        <y>-40</y>
        <width>10</width>
        <height>50</height>
        <input>
            <property>/velocities/airspeed-kt</property>
            <factor>0.1</factor>
            <max>85</max>
            <min>0</min>
        </input>
        <major-divisions>1</major-divisions>
        <minor-divisions>0.1</minor-divisions>
        <display-span>2.0</display-span>
        <option>left</option>
        <option>vertical</option>
        <tick-bottom>false</tick-bottom>
        <tick-top>false</tick-top>
        <tick-right>false</tick-right>
        <tick-left>false</tick-left>
        <cap-bottom>false</cap-bottom>
        <cap-top>false</cap-top>
        <cap-right>false</cap-right>
        <cap-left>false</cap-left>
        <marker-offset>5</marker-offset>
        <enable-pointer>true</enable-pointer>
        <pointer-type>fixed</pointer-type>
    </tape>


    <tape>
        <name>Gyrocompass</name>
        <x>-55</x>
        <y>-120</y>
        <width>100</width>
        <height>20</height>
        <input>
            <property>orientation/heading-deg</property>
            <factor>0.1</factor>
            <max>85</max>
            <min>0</min>
        </input>
        <display-span>3</display-span>
        <option>bottom</option>
        <major-divisions>1</major-divisions>
        <minor-divisions>0.1</minor-divisions>
        <tick-bottom>false</tick-bottom>
        <tick-top>false</tick-top>
        <tick-right>false</tick-right>
        <tick-left>false</tick-left>
        <cap-bottom>false</cap-bottom>
        <cap-top>false</cap-top>
        <cap-right>true</cap-right>
        <cap-left>true</cap-left>
        <marker-offset>0</marker-offset>
        <enable-pointer>false</enable-pointer>
        <pointer-type>fixed</pointer-type>
        <tick-type>line</tick-type>
        <tick-length>fixed</tick-length>
    </tape>

    <label>
        <name>Gyro Heading Marker</name>
        <x>-5</x>
        <y>-94</y>
        <width>1</width>
        <height>1</height>
        <format>v</format>
    </label>

    <label>
        <name>Gyro Heading Label</name>
        <x>-15</x>
        <y>-90</y>
        <width>18</width>
        <height>8</height>
        <input>
            <property>/orientation/heading-deg</property>
        </input>
        <format>%4.0f</format>
        <halign>center</halign>
        <box>true</box>
    </label>

    <label>
        <name>KIAS</name>
        <x>-82</x>
        <y>-20</y>
        <width>25</width>
        <height>10</height>
        <input>
            <property>/velocities/airspeed-kt</property>
        </input>
        <format>%4.0f</format>
        <halign>left</halign>
        <box>true</box>
        <option>right</option>
    </label>

    <label>
        <name>Altitude</name>
        <x>55</x>
        <y>-20</y>
        <width>24</width>
        <height>10</height>
        <input>
            <property>/position/altitude-ft</property>
        </input>
        <format>%4.0f</format>
        <halign>right</halign>
        <box>true</box>
        <option>left</option>
    </label>


    <label>
        <name>MACH Number</name>
        <x>-65</x>
        <y>60</y>
       <width>2</width>
        <height>2</height>
        <input>
            <property>/velocities/mach</property>
        </input>
        <format>M%4.1f</format>
        <halign>left</halign>
    </label>
	
	 <label>
	 <name>Ground Speed</name>
		<width>2</width>
		<height>2</height>
		<x>-65</x>
        <y>50</y>
		<format>GS:%3dkts</format>
		<halign>left</halign>
		<input>
			<property>/instrumentation/gps/indicated-ground-speed-kt</property>
		</input>
	</label>
	
	 <label>
        <name>G Load</name>
        <x>45</x>
        <y>60</y>
        <width>2</width>
        <height>2</height>
        <input>
            <property>/accelerations/pilot/z-accel-fps_sec</property>
            <factor>-0.03108095</factor>
            <damp>1.0</damp>
        </input>
        <format>G%2.1f</format>
        <halign>left</halign>
    </label>
	
	<label>
	<name>AGL</name>
	<x>45</x>
	<y>47</y>
	<width>24</width>
	<height>10</height>
	<input>
	<property>/position/altitude-agl-ft</property>
	</input>
	<format>AGL%4.0f</format>
	<halign>right</halign>
	<box>false</box>
	<option>left</option>
	</label>



 
 <aiming-reticle>
    <x>-5</x>
  <y>-5</y>
  <width>10</width>
  <height>10</height>
    <active-condition> 
      <property>/sim/aim/active</property>
    </active-condition>
       
    <!-- defines the diameter of the adjustable/outer circle -->
    <!--<diameter-input>50</diameter-input> -->
       
    <!-- The aiming reticule under is for gun-->
  </aiming-reticle>
         
  <aiming-reticle>
           
    <condition>
      <equals>
        <property>/sim/current-view/name</property>
        <value>Cockpit View</value>
      </equals>
      <property>/sim/aim/tachy</property>
    </condition>
           
    <active-condition>
             <property>/sim/aim/active</property>
    </active-condition>
           
    <tachy-condition>
      <property>/sim/aim/tachy</property>
    </tachy-condition>
           
    <align-condition>
      <property>/sim/aim/align</property>
    </align-condition>
           
    <yaw-input>
      <property>/orientation/yaw-rate-degps</property>
      <factor>-1.0</factor>
      <damp>2.0</damp>
    </yaw-input>
           
    <pitch-input>
      <property>/orientation/pitch-rate-degps</property>
      <factor>-1.0</factor>
      <damp>2.0</damp>
    </pitch-input>
           
    <offset-x-input>
      <property>/sim/aim/offsets/x</property>
    </offset-x-input>
           
    <offset-y-input>
      <property>/sim/aim/offsets/y</property>
    </offset-y-input>
           
    <speed-input>
      <property>/sim/aim/speed-fps</property>
      <!--In feet /s ... 1 yard = 3 feet and 1 nm = 2025 yards (and 1000 meters = 1 km)-->
    </speed-input>
           
    <range-input>
      <property>/sim/aim/range-yds</property>
      <!-- In Yard... -->
    </range-input>
           
    <!-- defines the diameter and length of the adjustable outer arc -->
    <diameter-input>
      <property>/sim/aim/radius</property>
    </diameter-input>
           
    <arc-start-input>
      <property>/sim/aim/arc/start-deg</property>
    </arc-start-input>
           
    <arc-stop-input>
      <property>/sim/aim/arc/stop-deg</property>
    </arc-stop-input>      
    
    <x>-9</x>
    <y>-15</y>
    <width>15</width>
    <height>15</height>
    <compression-factor>10</compression-factor>
    <limit-x>80</limit-x>
    <limit-y>40</limit-y>
  </aiming-reticle>
 
 
 
 <label>
    <name>Closest Range</name>
     <x>55</x>
        <y>-50</y>
        <width>24</width>
        <height>10</height>
    <condition>
      <and>
        <less-than>
          <property>/ai/closest/range</property>
          <property>instrumentation/radar/range</property>
        </less-than>
        <greater-than>
          <property>/ai/closest/range</property>
          <value>0</value>
        </greater-than>
      </and>
    </condition>
    <halign>right</halign>
    <format>%2.2fnm</format>
    <input>
      <property>/ai/closest/range</property>
    </input>
  </label>
     
  <label>
    <name>Closest Callsign</name>
      <x>55</x>
        <y>-40</y>
        <width>24</width>
        <height>10</height>
    <condition>
      <and>
        <less-than>
          <property>/ai/closest/range</property>
          <property>instrumentation/radar/range</property>
        </less-than>
        <greater-than>
          <property>/ai/closest/range</property>
          <value>0</value>
        </greater-than>
      </and>
    </condition>
    <input>
      <property>/ai/closest/callsign</property>
    </input>
    <format>%s</format>
    <halign>right</halign>
  </label>
     
  <label>
    <name>Closest Altitude</name>
     <x>55</x>
        <y>-60</y>
        <width>24</width>
        <height>10</height>
    <condition>
      <and>
        <less-than>
          <property>/ai/closest/range</property>
          <property>instrumentation/radar/range</property>
        </less-than>
        <greater-than>
          <property>/ai/closest/range</property>
          <value>0</value>
        </greater-than>
      </and>
    </condition>
    <input>
      <property>/ai/closest/altitude</property>
    </input>
    <format>%1.0f</format>
    <halign>right</halign>
  </label>
     
  <label>
    <name>Closest heading</name>
    <x>55</x>
        <y>-70</y>
        <width>24</width>
        <height>10</height>
    <condition>
      <and>
        <less-than>
          <property>/ai/closest/range</property>
          <property>instrumentation/radar/range</property>
        </less-than>
        <greater-than>
          <property>/ai/closest/range</property>
          <value>0</value>
        </greater-than>
      </and>
    </condition>
    <input>
      <property>/ai/closest/heading</property>
    </input>
    <format>%1.0f'</format>
    <halign>right</halign>
  </label>
     
  <label>
    <name>Closest speed</name>
   <x>55</x>
        <y>-80</y>
        <width>24</width>
        <height>10</height>
    <condition>
      <and>
        <less-than>
          <property>/ai/closest/range</property>
          <property>instrumentation/radar/range</property>
        </less-than>
        <greater-than>
          <property>/ai/closest/range</property>
          <value>0</value>
        </greater-than>
      </and>
    </condition>
    <input>
      <property>/ai/closest/speed</property>
    </input>
    <format>%1.0f</format>
    <halign>right</halign>
  </label>
     
  <label>
    <name>Closest bearing</name>
    <x>55</x>
        <y>-90</y>
        <width>24</width>
        <height>10</height>
    <condition>
      <and>
        <less-than>
          <property>/ai/closest/range</property>
          <property>instrumentation/radar/range</property>
        </less-than>
        <greater-than>
          <property>/ai/closest/range</property>
          <value>0</value>
        </greater-than>
      </and>
    </condition>
    <input>
      <property>/ai/closest/bearing</property>
    </input>
    <format>at %1.0f'</format>
    <halign>right</halign>
  </label>
	
	
	</PropertyList>
